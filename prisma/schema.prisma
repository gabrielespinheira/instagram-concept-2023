generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @unique @default(uuid())
  email     String    @unique
  password  String
  name      String?
  username  String    @unique
  avatar    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  deletedAt DateTime?
  Post      Post[]

  @@index([username])
  @@map("user")
}

model Post {
  id        String    @id @unique @default(uuid())
  text      String
  url       String
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  tags      Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  deletedAt DateTime?

  @@map("post")
}
